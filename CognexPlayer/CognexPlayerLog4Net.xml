<log4net>
    <appender name="ScannerRollingFile" type="log4net.Appender.RollingFileAppender">
        <file value="Scanner.log" />
        <appendToFile value="true" />
        <maximumFileSize value="100KB" />
        <maxSizeRollBackups value="2" />

        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="Workstation1 [%date] %level %thread %logger - %message%newline" />
        </layout>
    </appender>

  <appender name="DisplayRollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="DisplayController.log" />
    <appendToFile value="true" />
    <maximumFileSize value="100KB" />
    <maxSizeRollBackups value="2" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="Workstation1 [%date] %level %thread %logger - %message%newline" />
    </layout>
  </appender>
    
    <root>
        <level value="DEBUG" />
        <appender-ref ref="ScannerRollingFile" />
      <appender-ref ref="DisplayRollingFile" />
    </root>
</log4net>